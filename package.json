{
  "name": "rec0-bot",
  "version": "1.2.4",
  "description": "A bot for revolution of comm :)",
  "main": "index.js",
  "scripts": {
    "start": "npm run exec-ts",
    "start:js": "npm run build && npm run exec",
    "build": "tsc",
    "exec": "node ./output/index.js",
    "exec-ts": "ts-node src/index.ts",
    "test": "bash -c \"source src/__tests__/env.sh && jest\""
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@slack/rtm-api": "^5.0.1",
    "@slack/web-api": "^5.0.1",
    "cron": "^1.7.1",
    "lodash": "^4.17.11",
    "log4js": "^4.1.1"
  },
  "devDependencies": {
    "@types/cron": "^1.7.0",
    "@types/jest": "^24.0.12",
    "@types/lodash": "^4.14.123",
    "@types/node": "^12.0.0",
    "jest": "^24.1.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/**/*.test.(ts|js)"
    ]
  }
}
