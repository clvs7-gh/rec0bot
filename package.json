{
  "name": "rec0-bot",
  "version": "2.3.1",
  "description": "A bot for revolution of comm :)",
  "main": "index.js",
  "scripts": {
    "start": "npm run exec-ts",
    "start:js": "npm run build && npm run exec",
    "build": "tsc",
    "exec": "node ./output/index.js",
    "exec-ts": "ts-node src/index.ts",
    "test": "bash -c \"source src/__tests__/env.sh && jest\"",
    "lint": "eslint -c .eslintrc.js --ext .ts src"
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@slack/socket-mode": "^1.3.2",
    "@slack/web-api": "^6.9.1",
    "cron": "^2.3.1",
    "lodash": "^4.17.21",
    "log4js": "^6.9.1"
  },
  "devDependencies": {
    "@types/cron": "^2.0.1",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/**/*.test.(ts|js)"
    ],
    "preset": "ts-jest"
  }
}
