{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "outDir": "./output/",
        "strict": true,
        "types": ["node"],
        "allowSyntheticDefaultImports": true,
        "rewriteRelativeImportExtensions": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}
